{
  "name": "quiz-app",
  "version": "1.0.0",
  "description": "A simple quiz application.",
  "repository": {
    "type": "git",
    "url": "https://github.com/dalroy44/quiz-mania.git"
  },
  "main": "public/js/app.js",
  "scripts": {
    "build": "npm run build:ts && npm run build:scss",
    "build:ts": "tsc",
    "build:scss": "sass src/scss/main.scss public/css/main.css",
    "watch:ts": "tsc --watch",
    "watch:scss": "sass --watch src/scss/main.scss public/css/main.css",
    "dev": "concurrently \"npm:watch:*\" \"live-server public\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "sass": "^1.89.2",
    "typescript": "^5.8.3"
  }
}
